---
import TimeIcon from "@/icons/Time.astro";
import { type Song } from "@/lib/data";

interface Props {
  songs: Song[];
}

const { songs } = Astro.props;
---

<table class="min-w-full table-auto divide-y divide-gray-500/20 text-left">
  <thead>
    <tr class="text-sm font-light text-gray-400">
      <th class="px-4 py-2 font-light">#</th>
      <th class="px-4 py-2 font-light">Titulo</th>
      <th class="px-4 py-2 font-light">Album</th>
      <th class="px-4 py-2 font-light"><TimeIcon /></th>
    </tr>
  </thead>
  <tbody>
    {
      songs.map((song, index) => (
        <tr class="overflow-hidden rounded-lg text-sm font-light text-gray-300 transition duration-300 hover:bg-white/10">
          <td class="rounded-bl-lg rounded-tl-lg px-4 py-2 w-4">{index + 1}</td>
          <td class="flex gap-3 px-4 py-2">
            <picture>
              <img
                src={song.image}
                alt={song.title}
                class="h-11 w-11 rounded"
              />
            </picture>
            <div class="flex flex-col">
              <h3 class="text-white text-base font-normal">{song.title}</h3>
              <span>{song.artists.join(", ")}</span>
            </div>
          </td>
          <td class="px-4 py-2">{song.album}</td>
          <td class="rounded-br-lg rounded-tr-lg px-4 py-2">{song.duration}</td>
        </tr>
      ))
    }
  </tbody>
</table>
